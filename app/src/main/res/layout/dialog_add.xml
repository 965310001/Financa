<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg_add_img"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_76"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_52"
            android:layout_height="@dimen/dp_52"
            android:layout_marginLeft="@dimen/dp_20"
            app:srcCompat="@mipmap/ic_edit" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="72dp"
                android:layout_height="22dp"
                android:text="自己写文章"
                android:textColor="#ff333333"
                android:textSize="14sp" />

            <TextView
                android:layout_width="130dp"
                android:layout_height="22dp"
                android:text="自由添加文字或图片"
                android:textColor="#ff999999"
                android:textSize="14sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_17"
            app:srcCompat="@mipmap/ic_chevron" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_17"
        android:background="@drawable/shape_bg_line" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_share_link"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_76"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_52"
            android:layout_height="@dimen/dp_52"
            android:layout_marginLeft="@dimen/dp_20"
            app:srcCompat="@mipmap/ic_share_link" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="87dp"
                android:layout_height="22dp"
                android:text="粘贴文章链接"
                android:textColor="#ff333333"
                android:textSize="14sp" />

            <TextView
                android:layout_width="87dp"
                android:layout_height="22dp"
                android:text="点击查看方法"
                android:textColor="#ff999999"
                android:textSize="14sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginRight="@dimen/dp_11"
            android:text="8"
            android:textColor="#ff999999"
            android:textSize="16sp"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_17"
            app:srcCompat="@mipmap/ic_chevron" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_17"
        android:background="@drawable/shape_bg_line" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center"
        android:text="取消"
        android:textColor="#ff333333"
        android:textSize="14sp" />
</LinearLayout>


